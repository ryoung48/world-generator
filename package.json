{
  "name": "world-generator",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start": "vite",
    "lint:cspell": "npx cspell \"**\"",
    "lint:eslint": " npx eslint ./src --ext .jsx,.js,.ts,.tsx --ignore-path ./.gitignore",
    "lint:cycles": "npx madge --extensions ts,tsx --ts-config ./tsconfig.json -c ./src",
    "lint": "npm run lint:cspell && npm run lint:eslint && npm run lint:cycles",
    "test": "jest",
    "docs": "npx jsdoc -r ./src -c jsdoc.json",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@emotion/css": "^11.10.0",
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "@mui/material": "^5.9.3",
    "d3": "^7.6.1",
    "dayjs": "^1.11.4",
    "js-priority-queue": "^0.1.5",
    "mdi-material-ui": "^7.5.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^4.3.1",
    "react-dom": "^18.2.0",
    "simplex-noise": "^2.4.0"
  },
  "devDependencies": {
    "@types/d3": "^7.4.0",
    "@types/jest": "^28.1.6",
    "@types/js-priority-queue": "^0.0.6",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "@vitejs/plugin-react": "^2.0.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "typescript": "^4.6.4",
    "vite": "^3.0.0"
  },
  "madge": {
    "detectiveOptions": {
      "ts": {
        "skipTypeImports": true
      }
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/models/utilities/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 90
      }
    },
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "moduleNameMapper": {
      "d3": "<rootDir>/node_modules/d3/dist/d3.min.js"
    },
    "clearMocks": true,
    "transform": {
      "^.+\\.(ts|tsx|js|jsx)$": "ts-jest"
    },
    "testEnvironment": "jsdom"
  }
}
